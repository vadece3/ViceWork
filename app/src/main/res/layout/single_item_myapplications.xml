<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="246dp"
        android:orientation="vertical"
        android:background="@drawable/greylight"
        android:padding="10dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewpositionmyapp"
                android:layout_width="244dp"
                android:layout_height="match_parent"
                android:fontFamily="serif"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/imageButtondeletemyapp"
                android:layout_width="136dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/but"
                android:src="@drawable/ic_baseline_delete_24" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewjobnameviewmyapp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="serif"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewjobgiverviewmyapp"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:fontFamily="serif"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewstartdateviewmyapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnviewanswermyapp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/butw"
            android:text="View Response" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>